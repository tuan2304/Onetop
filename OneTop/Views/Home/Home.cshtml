@section Styles {
    <link rel="stylesheet" href="~/css/asset/css_part/Home/Home.css" asp-append-version="true" />
}
@model List<OneTop.Models.Product>



<main class="home-page">
    <section class="hero-section">
        <div class="hero-content">
            <h1>Welcome to ClothingStore</h1>
            <p>Your one-stop shop for the latest fashion trends.</p>
            <a asp-area="Account" asp-controller="Products" asp-action="AllProduct" class="btn-shop-now">Shop Now</a>
        </div>
    </section>
    <section class="featured-products">
        <h2>Danh Sách Sản Phẩm</h2>
        <div class="product-grid">
           @foreach(var item in Model)
            {
                <div class="product-card">
                    <div class="product-media">
                        <a asp-controller="Products"
                           asp-action="Detail"
                           asp-route-id="@item.ProductId">
                            <img src="@(item.ImageUrl.StartsWith("http")
                                                                  ? item.ImageUrl
                                                                  : Url.Content("~/img/" + item.ImageUrl))"
                             alt="@item.ProductName"
                             onerror="this.src='/img/no-image.png'" />
                    </a>
                    @* <span class="discount-badge">-25%</span> *@
                </div>

                    <div class="product-info">
                        <h3 class="product-name">
                            <a asp-area="Account" asp-controller="Products"
                               asp-action="Detail"
                               asp-route-id="@item.ProductId">
                                @item.ProductName
                            </a>
                        </h3>
                        <p class="price">
                            <span class="price-current">
                                @(((item.Price * (100 - (item.DiscountPercent ?? 0))) / 100m).ToString("N0")) đ
                            </span>


                            <span class="price-original">@item.Price.ToString("N0") đ</span>
                        </p>
                    </div>

                    <div class="product-actions">



                        <a asp-controller="Login" asp-action="Login" class="btn-buy-now">Buy Now</a>
                    </div>
                </div>
            }
            
        </div>
    </section>
</main>