@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create Product";
}
@model OneTop.Models.Product
@section Styles {
    <link rel="stylesheet" href="~/admin/css/asset/css_part/Product/CreateProduct.css" asp-append-version="true" />
}

<main class="create-product">
    <div class="cp-card">
        <h1>Create Product</h1>

        <form asp-controller="Product" asp-action="CreateProduct" method="post" enctype="multipart/form-data" class="cp-form" novalidate>
            <div class="cp-grid">
                <div class="form-group">
                    <label for="Name">Product name</label>
                    <input type="text" asp-for="ProductName" placeholder="Enter Name" required />
                    <span asp-validation-for="ProductName" class="text-danger" style="color:red"></span>
                </div>

                <div class="form-group">
                    <label for="Price">Price</label>
                    <input type="number" min="0" asp-for="Price" placeholder="Enter Price" required />
                    <span asp-validation-for="Price" class="text-danger" style="color:red"></span>
                </div>

                <div class="form-group">
                    <label for="Category">Category</label>
                    <select asp-for="CategoryName" required>
                        <option value="" >— Select —</option>
                        <option>Shirt</option>
                        <option>Pants</option>
                        <option>Accessories</option>
                    </select>
                    <span asp-validation-for="CategoryName" class="text-danger" style="color:red"></span>
                </div>

                <div class="form-group">
                    <label for="Stock">Stock</label>
                    <input  type="number" min="0" asp-for="Stock" placeholder="Enter Stock" required />
                    <span asp-validation-for="Stock" class="text-danger" style="color:red"></span>
                </div>

                <div class="form-group">
                    <label for="Discount">Discount (%)</label>
                    <input type="number"
                           asp-for="DiscountPercent"
                           min="0"
                           max="100"
                           step="1"
                           placeholder="Enter discount percent" />
                </div>

                <div class="form-group full">
                    <label for="Description">Description</label>
                    <textarea  asp-for="Description" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger" style="color:red"></span>
                </div>
                
                <div class="form-group">
                    <label for="Name">Image name</label>
                    <input type="text" asp-for="ImageUrl" placeholder="Enter Image file name" required />
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <a asp-controller="Product" asp-action="ProductManager" class="btn">Cancel</a>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="  " class="btn btn-danger" onclick="return confirm('Delete this product?');">Delete</a>

            </div>
        </form>
    </div>
</main>