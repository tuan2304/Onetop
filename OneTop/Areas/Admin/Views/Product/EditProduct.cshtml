@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

@model OneTop.Models.Product

@section Styles {
    <link rel="stylesheet" href="~/admin/css/asset/css_part/Product/EditProduct.css" asp-append-version="true" />
}


<main class="edit-product">
    <div class="cp-card">
        <h1>Edit Product</h1>

        <form method="post" asp-controller="Product" asp-action="EditProduct" enctype="multipart/form-data" class="cp-form" novalidate>
            <div class="cp-grid">
                <input asp-for="ProductId" type="hidden" />
                <div class="form-group">
                    <label for="Name">Product name</label>
                    <input asp-for="ProductName" type="text" placeholder="Enter Name" required />
                    <span asp-validation-for="ProductName" class="text-danger" style="color:red"></span>
                </div>

                <div class="form-group">
                    <label for="Price">Price</label>
                    <input asp-for="Price" type="number" min="0" placeholder="Enter Price" required />
                    <span asp-validation-for="Price" class="text-danger" style="color:red"></span>
                </div>

                <div class="form-group">
                    <label for="Category">Category</label>
                    <select asp-for="CategoryName" required>
                        <option value="">— Select —</option>
                        <option>Shirt</option>
                        <option>Pants</option>
                        <option>Accessories</option>
                    </select>
                    <span asp-validation-for="CategoryName" class="text-danger" style="color:red"></span>
                </div>
                <div class="form-group">
                    <label for="Stock">Số Lượng hàng tồn kho</label>
                    <input asp-for="Stock" type="number" min="0" placeholder="Enter Stock" required />
                    <span asp-validation-for="Stock" class="text-danger" style="color:red"></span>
                </div>

                <div class="form-group">
                    <label for="Stock">Giảm giá</label>
                    <input asp-for="DiscountPercent" type="number" min="0" max="100" step="0.1" placeholder="Giảm giá (%)">
                </div>

                <div class="form-group full">
                    <label for="Description">Description</label>
                    <textarea asp-for="Description" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger" style="color:red"></span>
                </div>

                <div class="form-group">
                    <label for="Name">Image</label>
                    <input asp-for="ImageUrl" type="text" placeholder="Enter name file image" required />
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save product</button>

            </div>
        </form>
    </div>
</main>